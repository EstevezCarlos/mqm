@import 'common'

ol > li > ol > li > blockquote,
ol > li > ul > li > blockquote,
ul > li > ol > li > blockquote,
ul > li > ul > li > blockquote
	color	inherit

ol > li > ol > li,
ol > li > ul > li,
ul > li > ol > li,
ul > li > ul > li,
code,
tt,
var,
kbd,
pre
	cursor	pointer
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none

ol > li > ol > li:hover,
ol > li > ul > li:hover,
ul > li > ol > li:hover,
ul > li > ul > li:hover
	color #345

.green
	color #3a3 !important
.green:hover
	color #3c3 !important
.red
	color #a00 !important
.red:hover
	color #f00 !important

ol > li > ol:focus,
ol > li > ul:focus,
ul > li > ol:focus,
ul > li > ul:focus
	background rgba(0,100,255,0.05)

footer
	font-size 3rem
	text-align center
	padding 3rem
